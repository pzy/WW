<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.d1sturbed.ww"
    android:versionCode="1"
    android:versionName="1.3" >

    <uses-sdk android:minSdkVersion="10" android:maxSdkVersion="12" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <service
            android:name=".WWUpdate"
            android:process=":remote" />

        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver
            android:name=".WW"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/ww_provider" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="WW.ACTION_WIDGET_SWITCH" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".WW2x1"
            android:label="@string/app_name_2x1" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/ww_provider_2x1" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="WW.ACTION_WIDGET_SWITCH" />
            </intent-filter>
        </receiver>
        
        <activity
            android:name=".WWActivity"
            android:icon="@drawable/ic_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="WW.ACTION_START_ACTIVITY" />
            </intent-filter>
        </activity>
    </application>

</manifest>